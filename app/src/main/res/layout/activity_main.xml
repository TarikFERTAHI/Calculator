<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/InputNumbers"
        android:layout_width="176pt"
        android:layout_height="80pt"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="60pt"
        android:gravity="right|center"
        android:ems="10"
        android:text="0" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_marginTop="4px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_height="30pt"
                android:layout_margin="8px"
                android:onClick="numberEvent"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/button2"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button3"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonMul"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button5"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button6"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonDiv"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button7"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            <Button
                android:id="@+id/button8"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button9"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonAdd"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="10pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonClear"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="35pt"
                android:layout_height="30pt"
                android:onClick="CEvent"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button0"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonEgal"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="40pt"
                android:layout_height="30pt"
                android:onClick="equalEvent"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/buttonSous"
                android:textColor="#FFF"
                android:layout_margin="8px"
                android:layout_width="50pt"
                android:layout_height="30pt"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>
    </TableLayout>
</LinearLayout>